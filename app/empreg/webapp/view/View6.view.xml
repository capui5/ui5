<mvc:View
    controllerName="empreg.controller.View6"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    busyIndicatorDelay="0"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
>
    <l:Splitter height="600px">
        <tnt:SideNavigation
            id="sideNavigation"
            selectedKey="subItem3"
            class="sidenavview6"
        >
            <tnt:NavigationList>
                <tnt:NavigationListItem
                    text="Go Back"
                    icon="sap-icon://nav-back"
                    select="onback"
                />
            </tnt:NavigationList>
        </tnt:SideNavigation>

        <VBox class="sapUiSmallMargin">
            <f:SimpleForm
                id="SimpleFormChange480_12120"
                editable="false"
                layout="ResponsiveGridLayout"
                title=""
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="12"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <Text
                        text="{MainModel>fname} {MainModel>lname}"
                        class="fname"
                    />
                </f:content>
            </f:SimpleForm>
            <HBox class="buttonhbox">
                <Button
                    id="update"
                    text="Edit"
                    visible="true"
                    press="onEdit"
                    class="sapUiTinyMarginBeginEnd customButton"
                    type="Emphasized"
                />
                <Button
                    id="delete"
                    text="Delete"
                    visible="true"
                    press="onDelete"
                    class="sapUiTinyMarginBeginEnd customButton"
                    type="Emphasized"
                />
            </HBox>
            <f:SimpleForm
                id="SimpleFormChange480_12120-2"
                editable="false"
                layout="ResponsiveGridLayout"
                title=""
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="12"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <core:Title text="Contact data" />
                    <Label text="Email" />
                    <Text text="{MainModel>email}" />
                    <!-- Use Text control to display data -->
                    <Label text="Skills" />
                    <Text text="{MainModel>skills}" />
                    <!-- Use Text control to display data -->
                    <Label text="Country" />
                    <Text text="{MainModel>country/name}" />
                    <!-- Use Text control to display data -->
                    <Label text="State" />
                    <Text text="{MainModel>State}" />
                    <Label text="City" />
                    <Text text="{MainModel>city}" />
                    <!-- Use Text control to display data -->
                    <core:Title text="Profile" />
                    <Label text="Email" />
                    <Text text="{EMail}" />
                    <!-- Use Text control to display data -->
                    <Label text="Tel." />
                    <Text text="{Tel}" />
                    <!-- Use Text control to display data -->
                    <Label text="SMS" />
                    <Text text="{Sms}" />
                    <!-- Use Text control to display data -->
                </f:content>
            </f:SimpleForm>
            <f:SimpleForm
                id="SimpleFormChange480_12120-3"
                editable="false"
                layout="ResponsiveGridLayout"
                title="Details"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="12"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <Label text="Email" />
                    <Text text="{EMail}" />
                    <!-- Use Text control to display data -->
                    <Label text="Tel." />
                    <Text text="{Tel}" />
                    <!-- Use Text control to display data -->
                    <Label text="SMS" />
                    <Text text="{Sms}" />
                    <!-- Use Text control to display data -->
                </f:content>
            </f:SimpleForm>
        </VBox>
    </l:Splitter>
</mvc:View>
